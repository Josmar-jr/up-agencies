{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "start": {
      "dependsOn": [
        "Ë†build"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env"
      ]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "JWT_SECRET"
  ],
  "globalDotEnv": [
    ".env"
  ]
}